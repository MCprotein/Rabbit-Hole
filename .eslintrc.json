{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/extensions": [
        "error",
        "ignorePackages",
        {
            "ts": "never",
            "tsx": "never"
        }
    ],
    "import/prefer-default-export":"off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"]
  },
  "overrides": [
    {
      "files": [
          "*.ts"
      ],
      "rules": { // Here it worked
          "@typescript-eslint/dot-notation": "error",
          "no-shadow": "off"
      }
}],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
