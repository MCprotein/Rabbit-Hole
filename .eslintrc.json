{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/extensions": [
        "error",
        "ignorePackages",
        {
            "ts": "never",
            "tsx": "never",
            "js": "never"
        }
    ],
    "import/prefer-default-export":"off",
    "class-methods-use-this": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    },
    "editor.codeActionsOnSave": {
      "source.fixAll": true
  }
  }
}
